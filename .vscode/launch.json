{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Unity Editor",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/Unity/Hub/Editor/Unity.exe",
            "args": ["-projectPath","${workspaceFolder}"],
            "stopAtEntry": true,
            "console": "internalConsole",
            "internalConsoleOptions": "openOnSessionStart",
            "runtimeType": "mono"
        },
        {
            "name": "Attach to Unity",
            "type": "vstuc",
            "request": "attach"
        }
    ]
}